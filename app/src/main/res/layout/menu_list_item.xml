<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="35dp"
    android:id="@+id/list_item">

    <ImageView
        android:id="@+id/dish_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/philosopher_bold"
        android:text="name"
        android:textSize="24sp"
        android:textColor="@color/text"
        app:layout_constraintLeft_toRightOf="@id/dish_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/cormorant_medium"
        android:text="ingr"
        android:textColor="@color/text"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/dish_image"
        app:layout_constraintTop_toBottomOf="@id/h2" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:fontFamily="@font/cormorant_bold_italic"
        android:text="123 "
        android:textColor="@color/price_text"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/dish_image"
        app:layout_constraintTop_toBottomOf="@id/ingredients" />


</androidx.constraintlayout.widget.ConstraintLayout>